@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Error"];
}

@if (ViewBag.ErrorTitle == null)
{
<h1 class="text-danger">@Localizer["Error."]</h1>
<h2 class="text-danger">
    @Localizer["An error occurred while processing your request." +
    "The support team is notified and we are working on the fix."]
</h2>
    <h5>@Localizer["Please contact us on it@synergrid.be"]</h5>
    <hr />
}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
}