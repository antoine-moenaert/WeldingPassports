@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Application.ViewModels.ContactCreateViewModel

@{
    ViewData["Title"] = Localizer["Contact Create"];
    string returnUrl = ViewBag.ReturnUrl;
}

<h1>@Localizer["Create contact"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="@typeof(ContactsController).GetNameOfController()" asp-action=@nameof(ContactsController.Create) asp-route-returnUrl="@returnUrl" method="post">
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                <input asp-for="FirstName" class="col-sm-10 form-control" placeholder="@Localizer["First name"]" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                <input asp-for="LastName" class="col-sm-10 form-control" placeholder="@Localizer["Last name"]"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Birthday" class="col-sm-2 col-form-label"></label>
                <input asp-for="Birthday" class="col-sm-10 form-control" placeholder="@Localizer["Birth day"]"/>
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div="col-sm-12">
                    <button type="submit" class="btn btn-primary" style="width:auto">@Localizer["Save"]</button>
                    <a href="@returnUrl" class="btn btn-primary" style="width:auto">@Localizer["Cancel"]</a>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
