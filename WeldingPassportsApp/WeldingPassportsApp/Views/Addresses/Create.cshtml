@using Microsoft.AspNetCore.Mvc.Localization  
@inject IViewLocalizer Localizer 
@model AddressCreateViewModel

@{
    ViewData["Title"] = "Create";
    string returnUrl = ViewBag.returnUrl;
}

<h1>@Localizer["Create address"]</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="@nameof(AddressesController.Create)" asp-route-returnUrl ="@returnUrl" method="post">
            <div class="form-group row">
                <label asp-for="BusinessAddress" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="BusinessAddress" class="form-control" />
                </div>
                <span asp-validation-for="BusinessAddress" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="BusinessAddressPostalCode" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="BusinessAddressPostalCode" class="form-control" />
                </div>
                <span asp-validation-for="BusinessAddressPostalCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="BusinessAddressCity" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="BusinessAddressCity" class="form-control" />
                </div>
                <span asp-validation-for="BusinessAddressCity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="BusinessAddressCountry" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="BusinessAddressCountry" class="form-control" />
                </div>
                <span asp-validation-for="BusinessAddressCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" style="width:auto">@Localizer["Save"]</button>
                <a href="@returnUrl" class="btn btn-primary" style="width:auto">@Localizer["Cancel"]</a>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
