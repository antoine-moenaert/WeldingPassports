@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model Application.ViewModels.PEWelderEditViewModel

@{
    ViewData["Title"] = Localizer["Edit PE Welder"];
    string returnUrl = ViewBag.ReturnUrl;
}

<h1>@Localizer["Edit PE Welder"]</h1>
<hr />
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="@typeof(WeldersController).GetNameOfController()" asp-action="@nameof(WeldersController.Edit)" asp-route-returnUrl="@returnUrl" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="EncryptedID" />
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="FirstName" class="form-control" placeholder="Firstname" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="LastName" class="form-control" placeholder="Lastname" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="NationalNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="NationalNumber" class="form-control" placeholder="National number" />
                </div>
                <span asp-validation-for="NationalNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="IdNumber" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="IdNumber" class="form-control" placeholder="ID-number" />
                </div>
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="width:auto">@Localizer["Save"]</button>
                    <a href="@returnUrl" class="btn btn-primary" style="width:auto">@Localizer["Cancel"]</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}